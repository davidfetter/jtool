#!/bin/bash

# Usage: jtool-ps ...

# Safety
set -o errexit -o pipefail -o nounset -o noclobber

# Bash extensions
set +o posix
shopt -s lastpipe

# Do it!
ps "$@"                     \
| sed -e 's/^[ \t]\+//'     \
    -e 's/[ \t]\+$//'       \
    -e '/^$/d'              \
    -e 's/[ \t]\+/ /g'      \
| jq --raw-input --slurp    \
'   (./"\n") as $a
    | ($a[0]/" ") as $names
    | ($names|length) as $nfields
    | $a[1:][]
    | select(. != "")
    | (./" ") as $values
    | reduce range($nfields) as $i
        ({}; .[$names[$i]] = $values[$i])
'

exit

# vim:syntax=sh:et:sw=4:ts=4:ai
