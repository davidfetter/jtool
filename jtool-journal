#!/bin/bash

# Usage: jtool-journal [OPTIONS] [MATCHES]

########################################################################
# Bash environment
########################################################################

# Safety
set -o errexit  \
    -o pipefail \
    -o nounset  \
    -o noclobber

# Extensions
set +o posix
shopt -s lastpipe
shopt -s expand_aliases
shopt -s extglob
shopt -s globstar

########################################################################
# Handle private protocol
########################################################################

if (( $# == 1 )); then
    case $1 in
        -\?) exec journalctl --help ;;
        -\:) exec cat <<SYNOPSYS
jtool CMD
   CMD sinopsys...
SYNOPSYS
            exit 0
            ;;
    esac
fi

########################################################################
# Command
########################################################################

# `journalctl` options
declare -a JCTL_OPT=(
    --output=json
)

# `journalctl` with JSON output!
journalctl ${JCTL_OPT} "$@"

exit

# vim:syntax=sh:et:sw=4:ts=4:ai
