#!/bin/bash

# Usage: jtool-lshw [OPTIONS]

########################################################################
# Bash environment
########################################################################

# Safety
set -o errexit  \
    -o pipefail \
    -o nounset  \
    -o noclobber

# Extensions
set +o posix
shopt -s lastpipe
shopt -s expand_aliases
shopt -s extglob
shopt -s globstar
shopt -s nullglob

########################################################################
# Handle private protocol
########################################################################

if (( $# == 1 )); then
    case $1 in
        -\?)
            if [[ -t 1 ]]; then
                lshw --help 2>&1 | less
            else
                lshw --help 2>&1
            fi
            exit
            ;;
        -\:)
            cat <<SYNOPSYS
jtool CMD
   CMD sinopsys...
SYNOPSYS
            exit 0
            ;;
    esac
fi

########################################################################
# Command
########################################################################

# `lshw` options
declare -a LSHW_OPT=(
    -json
)

# `lshw` with JSON output!
lshw ${LSHW_OPT} "$@"

exit

# vim:syntax=sh:et:sw=4:ts=4:ai
